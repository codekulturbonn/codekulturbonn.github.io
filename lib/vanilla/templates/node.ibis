<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>
        {{ node.meta_title || node.title || node.html|firsth|striptags }}
    </title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="@root/theme.css">
    <link rel="stylesheet" href="@root/codekulturbn.css">
    <link rel="stylesheet" href="@root/pygments.css">
    <!--[if lt IE 9]>
        <script src="@root/html5shiv.js"></script>
    <![endif]-->
    {{ inc.head }}
    {% block styles %}{% endblock %}
</head>

<body class="{{{ classes }}}">

    <header id="head" class="head">
        <input id="menu-check" type="checkbox"/>
        <label id="menu-label" for="menu-check" class="unselectable">
            <span class="icon close">✕</span>
            <span class="icon open">☰</span>
            <span class="text">MENU</span>
        </label>
        {{ inc.menu || automenu }}
    </header>

    <article id="main" class="main">
        {% if node.title %}
            <h1>{{ node.title }}</h1>
        {% endif %}
        {% block head %}{% endblock %}
        {{ node.html }}
        {% block foot %}{% endblock %}
    </article>

    <div id="commento"></div>
    <script src="https://commento.codekulturbonn.de/js/commento.js"></script>

    {{ inc.foot }}

    <script src="@root/fontawesome-all.min.js"></script>
    {% block scripts %}{% endblock %}
</body>
</html>
