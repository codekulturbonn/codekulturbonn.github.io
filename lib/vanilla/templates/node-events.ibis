{% extends "node.ibis" %}

{% block children %}
  <h2>Veranstaltungen</h2>
  <ul>
  {% for event in node.childlist %}
    <li>{{ event.start }}{% if event.end %} &hellip; {{ event.end }}{% endif%}:
      {% if event.event_url %}
        <a href="{{ event.event_url }}">{{ event.title }}</a>
      {% else %}
        {{ event.title }}
      {% endif %}
      {% if event.location %}
        - {{ event.location }}
      {% endif %}
    </li>
  {% endfor %}
  </ul>
{% endblock %}
